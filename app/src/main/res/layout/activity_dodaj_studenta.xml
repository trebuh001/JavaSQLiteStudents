<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dodaj_studenta"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_tytul"
        android:text="Dodaj studenta"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Imię:"
            android:textStyle="bold"
            android:background="#43A047"
            />
        <EditText
            android:id="@+id/etImie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Wpisz imię"
            android:textStyle="bold"
            android:background="#FDD835"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Nazwisko:"
            android:textStyle="bold"
            android:background="#43A047"
            />
        <EditText
            android:id="@+id/etNazwisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Wpisz nazwisko"
            android:textStyle="bold"
            android:background="#FDD835"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Kierunek:"
            android:textStyle="bold"
            android:background="#43A047"
            />
        <EditText
            android:id="@+id/etKierunek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Wpisz kier. studiów"
            android:textStyle="bold"
            android:background="#FDD835"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Rok studiów:"
            android:textStyle="bold"
            android:background="#43A047"
            />
        <EditText
            android:id="@+id/etRok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Wpisz rok studiów"
            android:textStyle="bold"
            android:background="#FDD835"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dodaj studenta"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/gradient_przycisk"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="dodaj_rekord2"/>
</LinearLayout>