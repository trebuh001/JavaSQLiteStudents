<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wybor_opcji"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_tytul"
        android:text="Wybierz opcję"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="italic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edytuj studenta"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/gradient_przycisk"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="edytuj_rekord3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuń studenta"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/gradient_przycisk"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="usun_rekord3"/>
</LinearLayout>